<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Locamod</title>

    <!-- css files-->
    <link href="assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/css/remixicon.css" rel="stylesheet">
    <link href="assets/css/slick.css" rel="stylesheet">
    <link href="assets/css/style.css" rel="stylesheet">
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">

</head>


<body>

    <!--header-->

    <header class="header-nav">


        <!--header top-->

        <div class="top-header">
            <div class="container">
                <div class=" justify-content-between d-flex align-items-center">


                    <!--logo-->
                    <a class="navbar-brand" href="#"><img src="assets/images/Logo.svg"></a>
                    <!--logo-->

                    <!--search block-->
                    <div class="search-block">

                        <form method="" action="">

                            <div class="form-group">

                                <div class="search-inner">
                                    <img src="assets/images/search.svg" class="search-icon">
                                    <input type="text" class="form-control" placeholder="Rechercher un matériel">
                                    <button class="btn btn-submit"><img src="assets/images/arrow-right.svg"></button>
                                </div>
                            </div>

                        </form>
                    </div>
                    <!--search block-->


                    <!-- devis-block-->

                    <div class="devis-block">
                        <span>Devis</span>
                        <div class="devis-inner">
                            <span class="devis-icon">
                                <img src="assets/images/devis.svg">
                            </span>
                            <small class="badge-devis">0</small>
                        </div>
                    </div>
                    <!-- devis-block-->

                </div>
            </div>

        </div>

        <!--header top-->

        <!--header bottom-->
        <div class="header-bottom">

            <div class="container">

                <div class="justify-content-between align-items-center d-flex">
                    <nav class="navbar navbar-expand-lg  ">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false"
                            aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>


                        <div class="collapse navbar-collapse" id="navbarNavDropdown">
    <ul class="navbar-nav">
        <li class="nav-item dropdown mega-dropdown">
            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#">Catalogue</a>
            <div class="dropdown-menu mega-dropdown-menu row d-flex justify-content-between d-none">
                <div class="col-lg-9">
                    <div class="mega-menu-inner">
                        {% for category in categories[:1] %}
                        <div class="title-block">
                            <h3>{{ category.getNom() }}</h3>
                            <img src="assets/images/sperator.svg">
                        </div>
                        <div class="row m-0">
                            <div class="col-lg-4 p-0">
                                <ul>
                                    {% for sousCategorie in category.getSousCategories() %}
                                    <li class="dropdown-header">{{ sousCategorie.getNomSousCategorie() }}</li>
                                    {% for produit in sousCategorie.getProduits() %}
                                    <li><a href="#">{{ produit.getNom() }}</a></li>
                                    {% endfor %}
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-lg-3">
                    {% for category in categories[1:] %}
                    <div class="mega-menu-inner">
                        <div class="title-block">
                            <h3>{{ category.getNom() }}</h3>
                            <img src="assets/images/sperator.svg">
                        </div>
                        <div class="row m-0">
                            <div class="col-lg-4 p-0">
                                <ul>
                                    {% for sousCategorie in category.getSousCategories() %}
                                    <li class="dropdown-header">{{ sousCategorie.getNomSousCategorie() }}</li>
                                    {% for produit in sousCategorie.getProduits() %}
                                    <li><a href="#">{{ produit.getNom() }}</a></li>
                                    {% endfor %}
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Questionnaire interactif</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Nos agences</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Notre expertise</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Actualités</a>
        </li>
    </ul>
</div>
<div class="social-links">
    <ul>
        <li> <a href=""> <i class="ri-facebook-fill"></i> </a></li>
        <li> <a href=""> <i class="ri-instagram-line"></i> </a></li>
        <li> <a href=""> <i class="ri-linkedin-fill"></i> </a></li>
        <li> <a href=""> <i class="ri-youtube-fill"></i> </a></li>
    </ul>
</div>
        <!--header bottom-->






    </header>
    <!--header-->


    <div class="content-page">



        <div class="breadcrumb-block">

            <div class="container">

                <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Accueil</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Je découvre le catalogue</li>
                    </ol>
                </nav>
            </div>

        </div>


        <section class="pt-20 pb-80 bg-white">

            <div class="container">
                <div class="catalogue-block">

                    <div class="row">

                        <div class="col-lg-6 pe-0">
                            <img src="assets/images/catalogue-img-1.jpg">

                        </div>

                        <div class="col-lg-6 ps-0">

                            <div class="bg-dark catalogue-right-side">
                                <div class="title-block">
                                    <h3 class="white-color">Catalogue</h3>
                                    <img src="assets/images/sperator.svg">
                                </div>
                                <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Culpa molestiae asperiores
                                    dolores vitae explicabo necessitatibus.</p>
                                <p>Lorem ipsum dolor sit, amet consectetur   Impedit blanditiis fuga itaque vitae dolorem
                                    quaerat officia necessitatibus magnam omnis enim? Quasi, porro praesentium.</p>

                            </div>


                        </div>
                    </div>
                    <a href="#tabs" class="btn"><i class="ri-arrow-down-double-line"></i></a>
                </div>
                <div class="tabs-block" id="tabs">
                <nav>
            <div class="nav nav-tabs mb-3" id="nav-tab" role="tablist">
                {% for category in categories %}
                    <button class="nav-link {{ loop.first ? 'active' : '' }}" 
                            id="nav-{{ loop.index }}-tab" 
                            data-bs-toggle="tab"
                            data-bs-target="#nav-{{ loop.index }}" 
                            type="button" 
                            role="tab" 
                            aria-controls="nav-{{ loop.index }}" 
                            aria-selected="{{ loop.first ? 'true' : 'false' }}">
                        {{ category.getNom() }}
                    </button>
                {% endfor %}
            </div>
        </nav>
        <div class="tab-content p-3" id="nav-tabContent">
            {% for category in categories %}
                <div class="tab-pane fade {{ loop.first ? 'show active' : '' }}" 
                     id="nav-{{ loop.index }}" 
                     role="tabpanel" 
                     aria-labelledby="nav-{{ loop.index }}-tab">
                    <div class="catalogue-content-inner">
                          <img src="assets/images/equipe-pro.svg" class="img-tabs">
                            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Eligendi, itaque architecto
                                assumenda doloribus sequi laudantium at iusto quia, suscipit modi quam animi </p>

                        <div class="row">
                            {% for sousCategorie in category.getSousCategories() %}
                                    <div class="col-md-4 mb-5">
                                     <div class="catalogue-item">
                                          <a href="{{ path('product_detail', {'id': sousCategorie.getId()}) }}"></a>
                                             <img src="{{ asset('assets/images/' ~ sousCategorie.getImage()) }}" alt="{{ sousCategorie.getNomSousCategorie() }}">
                                                    <div class="overlay-block-item">
                                                                <h3 id="{{ sousCategorie.getNomSousCategorie() }}" aria-hidden="true">{{ sousCategorie.getNomSousCategorie() }}</h3>
                                                                    <div class="hidden-block">
                                                      <span class="btn btn-outline">Je découvre</span>
                                                                     </div>
                                                                        </div>
                                                                        </div>
                                                </div>
                            {% endfor %}

                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

                </div>

            </div>

        </section>
 

        <footer>

            <div class="footer-top">

                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-4">
                            <img src="assets/images/logo.svg" class="logo">
                        </div>

                        <div class="col-lg-3">
                            <ul>
                                <li><a href="">DECOUVRIR LOCAMOD</a></li>
                                <li><a href="">NOS METIERS</a></li>
                                <li><a href="">NOTRE EXPERTISE</a></li>
                                <li><a href="">NOS VALEURS</a></li>
                            </ul>
                        </div>

                        <div class="col-lg-3">
                            <ul>
                                <li><a href="">Carrière</a></li>
                                <li><a href="">FAQ</a></li>
                                <li><a href="">Mentions légales</a></li>
                                <li><a href="">Témoignages</a></li>
                            </ul>
                        </div>

                        <div class="col-lg-2">
                            <a href="#" class="btn btn-primary">Nous contacter</a>

                        </div>
                    </div>
                </div>
            </div>

            <div class="footer-bottom">
                <p class="text-center">Copyright © locamod</p>
            </div>
        </footer>
    </div>


    <!--script-->
    <script src="assets/js/jquery-3.5.1.min.js"></script>
    <script src="assets/js/bootstrap.bundle.min.js"></script>
    <script src="assets/js/slick.min.js"></script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>
    <script src="assets/js/main.js"></script>
     <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
</body>

</body>

</html>